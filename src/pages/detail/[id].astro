---
import Layout from '@layouts/Layout.astro';

const { id } = Astro.params;
const response = await fetch(
  `https://api.themoviedb.org/3/movie/${ id }?api_key=d93d4aab0e3039239f7cd26ff74d0899&language=en-US`
);

const data = await response.json();
const poster_url = "https://image.tmdb.org/t/p/w500/";
---
<Layout>
  <div class="row mt-5">
    <div class="col-md-4">
      <img 
        src={ poster_url + data.poster_path } 
        alt="poster" 
        class="img-fluid rounded-start" 
      />
    </div>
    <div class="col-md-8">
      <h1><span class="badge text-bg-dark">{ data.title }</span></h1>
      <h4>{ data.tagline }</h4>
      <h2>Overview</h2>
      <p>{ data.overview }</p>
      <p><span class="badge text-bg-secondary">{ data.release_date }</span></p>
      <h1><span class="badge text-bg-danger">{ Math.round(data.vote_average) }</span></h1>
    </div>
  </div>
  <h1>Trailer</h1>

</Layout>


